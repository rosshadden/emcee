{
	"compilerOptions": {
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"pretty": true,
		"resolveJsonModule": true,
		"rootDir": ".",
		"sourceMap": true,
		"target": "es2020"
	},
	"include": [
		"./bin/**/*",
		"./lib/**/*.ts",
		"./src/**/*.ts"
	]
}
